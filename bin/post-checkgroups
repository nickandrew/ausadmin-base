#!/bin/bash
#	@(#) $Id$
#	@(#) bin/post-checkgroups - Post signed checkgroups

umask 027

#----------------------------------------------------------------------------
#  Post the message
#----------------------------------------------------------------------------

rc=0

if [ ! -d data ] ; then
	echo "post-checkgroups: No data directory, fatal"
	exit 8
fi

if [ ! -f data/checkgroups.signed ] ; then
	echo "post-checkgroups: No data/checkgroups.signed file, fatal"
	exit 8
fi

bin/post.pl < data/checkgroups.signed
s=$?
if [ $s -ne 0 ] ; then
	echo "post.pl submission of data/checkgroups.signed returned status $s"
	rc=8
fi

exit $rc
