#!/bin/bash
#	@(#) bin/sendcheckgroup - Create/post newsgroup list and checkgroups
#
# $Source$
# $Revision$
# $Date$

umask 022

# Recreate checkgroups first
gen-ausgroups.pl
s=$?
if [ $s -ne 0 ] ; then
	echo "gen-ausgroups.pl returned status $s - fatal"
	exit 2
fi

# Then the human-readable grouplist message
gen-grouplist.pl
s=$?
if [ $s -ne 0 ] ; then
	echo "gen-grouplist.pl returned status $s - fatal"
	exit 2
fi

# Finally the machine-readable checkgroups message
gen-checkgroups.pl
s=$?
if [ $s -ne 0 ] ; then
	echo "gen-checkgroups.pl returned status $s - fatal"
	exit 3
fi

#----------------------------------------------------------------------------
#  Post the messages
#----------------------------------------------------------------------------

rc=0
post.pl < data/grouplist.signed
s=$?
if [ $s -ne 0 ] ; then
	echo "post.pl submission of data/grouplist.signed returned status $s"
	rc=8
fi

post.pl < data/checkgroups.signed
s=$?
if [ $s -ne 0 ] ; then
	echo "post.pl submission of data/checkgroups.signed returned status $s"
	rc=8
fi

exit $rc
