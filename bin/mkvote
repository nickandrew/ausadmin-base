#!/bin/bash
#	@(#) mkvote: Setup everything needed to start a new vote.
#	This script only works for a single newsgroup, and interactively
#
#  - Create the vote control files
#  - Create the Call For Votes
#  - Post Call For Votes into the group distribution list

# $Source$
# $Revision$
# $Date$

if [ $# -lt 1 ]
then
	echo usage: $0 newsgroup-name >&2
	exit 1
fi

# Get command line arguments
Newsgroup="$1"

# Commonly used variables
BaseDir=./vote
ng_dir=$BaseDir/$Newsgroup

# Check that vote directory exists, and other files needed to create a vote
if [ ! -d $ng_dir ] ; then
	echo No directory $ng_dir
	exit 8
fi

if [ ! -d CFV ] ; then
	echo No directory CFV, make sure you are in the correct directory
	exit 8
fi

# Expect all these files ..
s=0
for i in charter distribution ngline proposer rationale ; do
	if [ ! -f $ng_dir/$i ] ; then
		echo Missing $ng_dir/$i - run new-rfd first
		s=8
	fi
done

if [ $s != 0 ] ; then
	echo Unable to make vote due to missing RFD files
	exit $s
fi

if [ -e $ng_dir/endtime.cfg ] ; then
	echo Vote already started on $Newsgroup
	exit 8
fi

# Run the Perl script mkcfv to make the CFV and PGP-sign it then post it away!
mkcfv.pl $Newsgroup > tmp/cfv-unsigned.$Newsgroup
s=$?
if [ $s != 0 ] ; then
	echo "Unable to make Call For Votes -- code $s - fatal"
	cat tmp/cfv-unsigned.$Newsgroup
	exit 7
fi

bin/pgp-sign < tmp/cfv-unsigned.$Newsgroup > $ng_dir/posted.cfv

rm -f CFV/$Newsgroup
ln -s $BaseDir/$Newsgroup/posted.cfv CFV/$Newsgroup

# Setup the vote - just - before - posting the CFV

~/bin/setup-vote $Newsgroup

# Post the CFV
echo `date '+%s'` > $ng_dir/posted.cfg
~/bin/post.pl < $BaseDir/$Newsgroup/posted.cfv

echo Done at `date`
exit 0
