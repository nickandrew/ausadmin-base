#!/bin/bash
#	@(#) incoming - Save a received message and process it
#	@(#) $Header$

cd ~ausadmin

export PATH=$HOME/bin:$PATH

ts=`date '+%Y%m%d-%H%M%S'`
suffix=`printf "%05d" $$`
fn=messages/$ts.$suffix

cat > $fn

incoming.pl $fn > $fn.votes
rc=$?
if [ $rc != 0 ] ; then
	# No votes
	rm -f $fn $fn.votes
	exit 0
fi

collater.pl < $fn.votes
exit 0
